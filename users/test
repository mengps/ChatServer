CREATE TABLE IF NOT EXISTS Friends
(
    fri_username char(8) NOT NULL PRIMARY KEY,
    fri_nickname char(24) NOT NULL DEFAULT '游客',
    fri_groupname char(36) NOT NULL DEFAULT '我的好友',
    fri_signature char(64) NULL,
    fri_birthday date NOT NULL DEFAULT (DATE('now')),
    fri_headImage varchar(64) NULL DEFAULT 'qrc:head1.jpg'
);

CREATE TABLE IF NOT EXISTS Messages
(   
    msg_index int NOT NULL PRIMARY KEY,
    msg_sender char(10) NOT NULL,
    msg_datetime datetime NOT NULL,
    msg_content text NOT NULL
);

