CREATE TABLE IF NOT EXISTS users
(
    user_username    VARCHAR(10) NOT NULL,
    user_friend      VARCHAR(10) NOT NULL,
    user_group       VARCHAR(16) NOT NULL DEFAULT '我的好友',
    friend_group     VARCHAR(16) NOT NULL DEFAULT '我的好友'
);

INSERT INTO users VALUES('843261040', '00000001', '我的好友', '我的好友');

CREATE TABLE IF NOT EXISTS info
(
    user_username      VARCHAR(10) NOT NULL PRIMARY KEY,
    user_password      VARCHAR(32) NOT NULL,
    user_nickname      VARCHAR(32) DEFAULT 'USER',
    user_headImage     VARCHAR(32) DEFAULT 'qrc:/image/winIcon.png',
    user_gender        VARCHAR(2)  DEFAULT '男',
    user_birthday      TEXT        DEFAULT (DATE('now')),
    user_signature     VARCHAR(64) NULL,
    user_unreadMessage int     DEFAULT 0,
    user_level         int     DEFAULT 1
);

INSERT INTO info VALUES('843261040', '00000000000', 'MPS', 'head1.jpg', '男', '1996-07-27', '嗷嗷嗷嗷嗷嗷嗷嗷嗷嗷', 0, 999);
INSERT INTO info VALUES('00000001', '00000000000', 'mps1', '11.jpg', '男', '1997-12-02', '我不想多说我只知道我爱你我还爱着你', 0, 17);

SELECT user_friend AS user_id , user_group AS user_group
FROM users
WHERE user_username = '843261040'
UNION ALL
SELECT user_username AS user_id, friend_group AS user_group
FROM users
WHERE user_friend = '843261040';

SELECT *
FROM info
WHERE user_username = '843261040';

UPDATE info
SET user_unreadMessage = 1
WHERE user_username = '843261040';